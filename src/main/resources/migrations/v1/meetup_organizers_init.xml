<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="meetup_organizers_initialization" author="spring_meetup_paris_team">
        <createTable tableName="meetup_organizers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="meetup_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="meetup_organizers_fk_meetup"
                             references="meetup(id)"/>
            </column>
            <column name="organizers_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="meetup_organizers_fk_organizer"
                             references="organizer(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>