<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="status_initialization" author="spring_meetup_paris_team">
        <createTable tableName="status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="value" type="varchar">
                <constraints nullable="false"
                             unique="true"
                             uniqueConstraintName="status_unique_external_value"/>
            </column>
        </createTable>
    </changeSet>
    <!-- based on Meetup API v3 values -->
    <changeSet id="status_initial_data" author="spring_meetup_paris_team">
        <insert tableName="status">
            <column name="value">attended</column>
        </insert>
        <insert tableName="status">
            <column name="value">absent</column>
        </insert>
        <insert tableName="status">
            <column name="value">noshow</column>
        </insert>
    </changeSet>
</databaseChangeLog>