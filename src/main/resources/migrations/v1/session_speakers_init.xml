<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="session_speakers_initialization" author="spring_meetup_paris_team">
        <createTable tableName="session_speakers">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="session_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="session_speakers_fk_session"
                             references="session(id)"/>
            </column>
            <column name="speakers_id" type="bigint">
                <constraints nullable="false"
                             foreignKeyName="session_speakers_fk_speaker"
                             references="speaker(id)"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>